{
  "name": "isy-crm",
  "version": "1.0.0",
  "description": "Monorepo for ISY CRM",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules dist .turbo",
    "prepare": "husky",
    "gen:types": "supabase gen types typescript --local > shared/src/database.types.ts",
    "check:drift": "pnpm gen:types && git diff --exit-code shared/src/database.types.ts"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "supabase": "^2.75.5",
    "typescript-eslint": "^8.54.0"
  }
}
